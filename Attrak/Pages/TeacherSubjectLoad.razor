        {
            Console.WriteLine($"Error loading available sections: {ex.Message}");
            availableSectionsForAssignment = new List<SubjectSectionInfo>();
            errorMessage = "Error loading available sections";
        }
        finally
        {
            isLoadingAvailableSections = false;
            StateHasChanged();
        }
    }

