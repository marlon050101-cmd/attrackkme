            // Load available sections for this subject's grade level and teacher's school
            var response = await Http.GetFromJsonAsync<List<SubjectSectionInfo>>($"{ApiConfig.BaseUrl}api/teachersubject/available-sections/{subject.SubjectId}/{teacher.SchoolName}");
            availableSectionsForAssignment = response ?? new List<SubjectSectionInfo>();
