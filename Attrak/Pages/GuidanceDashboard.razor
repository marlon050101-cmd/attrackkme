@page "/guidance-dashboard"
@using AttrackSharedClass.Models
@using Attrak.Services
@inject IAuthService AuthService
@inject HttpClient Http
@inject NavigationManager Navigation
@layout Layoutall

<PageTitle>Guidance Dashboard - Attrak</PageTitle>

<div class="container-fluid">
    <!-- Header -->
    <div class="row bg-gradient-primary text-white p-4 mb-4 rounded-3 shadow">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-center flex-grow-1">
                    <h2 class="mb-3 fw-bold">
                        <i class="fas fa-shield-alt me-2"></i>Guidance Dashboard
                    </h2>
                    <h5 class="mb-0 opacity-90">Students at Risk - Attendance Monitoring</h5>
                </div>
                <div>
                    <button class="btn btn-outline-light btn-lg" @onclick="Logout">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading dashboard data...</p>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@errorMessage
                </div>
            </div>
        </div>
    }
    else
    {
    <!-- Summary Cards -->
    <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center bg-danger text-white rounded-3">
                        <i class="fas fa-flag fa-2x mb-3"></i>
                        <h2 class="mb-2 fw-bold">@(dashboardData?.FlaggedStudents ?? 0)</h2>
                        <p class="mb-0 fw-semibold">Total Flagged Students</p>
                </div>
            </div>
        </div>
            <div class="col-md-4 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center bg-warning text-dark rounded-3">
                        <i class="fas fa-graduation-cap fa-2x mb-3"></i>
                        <h2 class="mb-2 fw-bold">@(dashboardData?.GradeLevelsAffected ?? 0)</h2>
                        <p class="mb-0 fw-semibold">Grade Levels Affected</p>
                </div>
            </div>
        </div>
            <div class="col-md-4 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center bg-info text-white rounded-3">
                        <i class="fas fa-users fa-2x mb-3"></i>
                        <h2 class="mb-2 fw-bold">@(dashboardData?.SectionsMonitored ?? 0)</h2>
                        <p class="mb-0 fw-semibold">Sections Monitored</p>
                </div>
                </div>
            </div>
        </div>


    <!-- Students at Risk Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-gradient-danger text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">
                            <i class="fas fa-exclamation-triangle me-2"></i>Students at Risk (3+ Absences)
                        </h5>
                        <span class="badge bg-light text-dark fw-semibold" style="padding: 1.2rem 2rem; border-radius: 0; min-width: 180px; font-size: 1.2rem; display: inline-flex; align-items: center; justify-content: center; line-height: 1;">
                            <i class="fas fa-calendar me-1"></i>@DateTime.Now.ToString("MMM dd, yyyy")
                        </span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="position: relative; overflow: hidden;">
                        <table class="table mb-0" style="position: relative; z-index: 1;">
                            <thead class="table-dark">
                                <tr>
                                    <th class="text-center">Grade</th>
                                    <th class="text-center">Section</th>
                                    <th>Student Name</th>
                                    <th class="text-center">Gender</th>
                                    <th class="text-center">Absences</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (dashboardData?.StudentsAtRisk?.Any() == true)
                                {
                                    var groupedStudents = dashboardData.StudentsAtRisk
                                        .OrderBy(s => s.GradeLevel)
                                        .ThenBy(s => s.Section)
                                        .ThenBy(s => s.FullName)
                                        .GroupBy(s => new { s.GradeLevel, s.Section });

                                    @foreach (var group in groupedStudents)
                                    {
                                        <!-- Grade Level Header Row -->
                                        <tr class="table-info">
                                            <td colspan="7" class="fw-bold py-3">
                                                <i class="fas fa-graduation-cap me-2 text-primary"></i>
                                                Grade @group.Key.GradeLevel
                                            </td>
                                        </tr>
                                        
                                        <!-- Section Header Row -->
                                        <tr class="table-light">
                                            <td colspan="7" class="fw-semibold py-2">
                                                <i class="fas fa-users me-2 text-info"></i>
                                                @group.Key.Section Section
                                            </td>
                                        </tr>
                                        
                                        <!-- Student Rows -->
                                        @foreach (var student in group)
                                        {
                                            <tr>
                                                <td class="text-center">
                                                    <span class="badge bg-primary">@student.GradeLevel</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-info">@(student.Section ?? "N/A")</span>
                                                </td>
                                                <td class="fw-bold">@(student.FullName ?? "Unknown")</td>
                                                <td class="text-center">
                                                    <i class="fas fa-@(student.Gender?.ToLower() == "male" ? "male" : "female") text-@(student.Gender?.ToLower() == "male" ? "primary" : "pink") me-1"></i>@(student.Gender ?? "Unknown")
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-danger">@student.AbsentDays</span>
                                                    @if (!string.IsNullOrEmpty(student.AbsentDates))
                                                    {
                                                        <br>
                                                        <small class="text-muted">
                                                            <i class="fas fa-calendar-alt me-1"></i>
                                                            @student.AbsentDates
                                                        </small>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (student.AbsentDays >= 3)
                                                    {
                                                        <span class="badge bg-danger text-white">
                                                            <i class="fas fa-exclamation-triangle me-1"></i>Critical
                                                        </span>
                                                    }
                                                    else if (student.AbsentDays == 2)
                                                    {
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="fas fa-exclamation-circle me-1"></i>Warning
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-info text-white">
                                                            <i class="fas fa-info-circle me-1"></i>Monitor
                                                        </span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <button class="btn btn-sm btn-outline-warning me-1" @onclick="() => ViewStudentDetails(student.StudentId)" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-info me-1" @onclick="() => MarkAsPending(student.StudentId)" title="Mark as Pending">
                                                        <i class="fas fa-clock"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-success" @onclick="() => ResolveStudent(student.StudentId)" title="Resolve Issue">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-check-circle fa-2x mb-2 text-success"></i>
                                                <p class="mb-0">No students at risk found. Great job!</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-4">
        <div class="col-12">
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <button class="btn btn-info btn-lg px-4 py-3 rounded-pill shadow-sm" @onclick="GenerateRiskReport">
                    <i class="fas fa-chart-bar me-2"></i>Generate Risk Report
                </button>
                    <button class="btn btn-success btn-lg px-4 py-3 rounded-pill shadow-sm" @onclick="RefreshData">
                        <i class="fas fa-sync-alt me-2"></i>Refresh Data
                    </button>
                    <button class="btn btn-outline-primary btn-lg px-4 py-3 rounded-pill shadow-sm" @onclick="ExportData">
                        <i class="fas fa-download me-2"></i>Export Data
                    </button>
            </div>
        </div>
    </div>
    }
</div>

@code {
    private GuidanceDashboardData? dashboardData;
    private bool isLoading = true;
    private string errorMessage = string.Empty;
    private UserInfo? currentUser;

    protected override async Task OnInitializedAsync()
    {
        currentUser = await AuthService.GetCurrentUserAsync();
        
        if (currentUser == null)
        {
            // Redirect to login if not authenticated
            return;
        }

        if (currentUser.UserType != UserType.GuidanceCounselor)
        {
            errorMessage = "Access denied. This dashboard is only for guidance counselors.";
            isLoading = false;
            return;
        }

        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            StateHasChanged();

            var response = await Http.GetFromJsonAsync<GuidanceDashboardData>($"{ApiConfig.BaseUrl}api/guidance/dashboard/{currentUser.UserId}");
            
            if (response != null)
            {
                dashboardData = response;
            }
            else
            {
                errorMessage = "Failed to load dashboard data.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred while loading dashboard data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshData()
