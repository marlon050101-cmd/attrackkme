@page "/daily-attendance"
@using AttrackSharedClass.Models
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components
@using Attrak.Services
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@inject IAuthService AuthService
@implements IDisposable
@layout Layoutall
<PageTitle>Student Daily Attendance Management</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-calendar-day me-2"></i>
                        Student Daily Attendance Management
                    </h3>
                    <p class="text-muted mb-0">Teachers can manage student daily attendance</p>
                </div>
                <div class="card-body">

                    <!-- Teacher Info Display -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <h5 class="alert-heading">
                                    <i class="fas fa-user-tie me-2"></i>
                                    Current Teacher
                                </h5>
                                <p class="mb-0">
                                    <strong>@currentTeacherName</strong>
                                    <br>
                                    <small class="text-muted">
                                        Section: <strong>@currentTeacherSection</strong> | School: <strong>@currentTeacherSchool</strong>
                                    </small>
                                    <br>
                                    <small class="text-muted">Managing student daily attendance</small>
                                </p>
                            </div>
                        </div>
                    </div>



                        <!-- Today's Attendance Summary Cards -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <i class="fas fa-check-circle fa-2x mb-2"></i>
                                        <h3 class="mb-1">@presentCount</h3>
                                        <p class="mb-0">Present Today</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body text-center">
                                        <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                                        <h3 class="mb-1">@lateCount</h3>
                                        <p class="mb-0">Late Today</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center">
                                        <i class="fas fa-clock fa-2x mb-2"></i>
                                        <h3 class="mb-1">@timeInOnlyCount</h3>
                                        <p class="mb-0">Time In Only</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <i class="fas fa-user-check fa-2x mb-2"></i>
                                        <h3 class="mb-1">@completeCount</h3>
                                        <p class="mb-0">Complete</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Today's Attendance Records -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card shadow">
                                    <div class="card-header bg-dark text-white">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0">
                                                <i class="fas fa-calendar-day me-2"></i>Today's Attendance Records
                                            </h5>
                                            <div class="d-flex align-items-center gap-2">
                                                <button class="btn btn-sm btn-outline-light" @onclick="RefreshData">
                                                    <i class="fas fa-sync-alt me-1"></i>
                                                    Refresh
                                                </button>
                                                <span class="badge bg-light text-dark">
                                                    <i class="fas fa-calendar me-1"></i>@DateTime.Today.ToString("MMMM dd, yyyy")
                                                </span>
                                                <small class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>Last: @_lastRefreshTime.ToString("HH:mm:ss")
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table table-hover mb-0">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th class="border-0">Student Name</th>
                                                        <th class="border-0 text-center">Time In</th>
                                                        <th class="border-0 text-center">Time Out</th>
                                                        <th class="border-0 text-center">Status</th>
                                                        <th class="border-0 text-center">Remarks</th>
                                                        <th class="border-0 text-center">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (students.Any())
                                                    {
                                                        @foreach (var student in students.OrderBy(s => s.FullName))
                                                        {
                                                            var attendanceRecord = todayAttendanceRecords.FirstOrDefault(r => r.StudentId == student.StudentId);
                                                            var status = attendanceRecord?.Status ?? "";
                                                            var timeIn = attendanceRecord?.TimeIn ?? "";
                                                            var timeOut = attendanceRecord?.TimeOut ?? "";
                                                            var remarks = attendanceRecord?.Remarks ?? "";
                                                            
                                                            <tr class="@GetRowClass(status)">
                                                                <td class="ps-4 fw-semibold">@student.FullName</td>
                                                                <td class="text-center">
                                                                    @if (!string.IsNullOrEmpty(timeIn))
                                                                    {
                                                                        <span class="badge @GetTimeBadgeClass(status) fs-6">@timeIn</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="text-muted">-</span>
                                                                    }
                                                                </td>
                                                                <td class="text-center">
                                                                    @if (!string.IsNullOrEmpty(timeOut))
                                                                    {
                                                                        <span class="badge bg-danger fs-6">@timeOut</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="text-muted">-</span>
                                                                    }
                                                                </td>
                                                                <td class="text-center">
                                                                    <span class="badge @GetStatusBadgeClass(status)">
                                                                        <i class="fas fa-@GetStatusIcon(status) me-1"></i>@status
                                                                    </span>
                                                                </td>
                                                                <td class="text-center">
                                                                    @if (!string.IsNullOrEmpty(remarks))
                                                                    {
                                                                        <span class="badge bg-info">@remarks</span>
                                                                    }
                                                                    else if (status == "Present" && !string.IsNullOrEmpty(timeOut))
                                                                    {
                                                                        <span class="badge bg-success">Complete</span>
                                                                    }
                                                                    else if (status == "Present")
                                                                    {
                                                                        <span class="badge bg-warning">Time In Only</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="text-muted">-</span>
                                                                    }
                                                                </td>
                                                                <td class="text-center">
                                                                    @{
                                                                        // Debug logging
                                                                        Console.WriteLine($"DEBUG: Student {student.FullName} - Status: {status}, HasRecord: {attendanceRecord != null}, RecordStatus: {attendanceRecord?.Status ?? "null"}");
                                                                    }
                                                                    @if (status == "Absent")
                                                                    {
                                                                        <button class="btn btn-sm btn-success" @onclick="() => CancelAbsent(student.StudentId, student.FullName)">
                                                                            <i class="fas fa-undo me-1"></i>Cancel Absent
                                                                        </button>
                                                                    }
                                                                    else if (string.IsNullOrEmpty(status))
                                                                    {
                                                                        <button class="btn btn-sm btn-danger" @onclick="() => ShowAbsentModal(student.StudentId, student.FullName)">
                                                                            <i class="fas fa-times me-1"></i>Mark Absent
                                                                        </button>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="text-muted">-</span>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td colspan="5" class="text-center py-4">
                                                                <div class="text-muted">
                                                                    <i class="fas fa-calendar-day fa-2x mb-2"></i>
                                                                    <p class="mb-0">No students found for this teacher's class.</p>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Absent Reason Modal -->
@if (showAbsentModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-times me-2"></i>Mark Student as Absent
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseAbsentModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label"><strong>Student:</strong> @selectedAbsentStudentName</label>
                    </div>
                    <div class="mb-3">
                        <label for="absentReason" class="form-label">Reason for Absence:</label>
                        <textarea class="form-control" id="absentReason" rows="3" @bind="absentReason" placeholder="Enter reason for absence..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseAbsentModal">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="MarkStudentAbsent" disabled="@isProcessingAbsent">
                        @if (isProcessingAbsent)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="fas fa-times me-1"></i>Mark as Absent
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Real-time Notification Toast -->
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
        <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-success text-white">
                <i class="fas fa-check-circle me-2"></i>
                <strong class="me-auto">New Attendance Record</strong>
                <button type="button" class="btn-close btn-close-white" @onclick="() => successMessage = string.Empty"></button>
            </div>
            <div class="toast-body">
                @successMessage
            </div>
        </div>
    </div>
}

@code {
    // Data
    private List<Student> students = new();
    private List<DailyAttendanceRecord> attendanceHistory = new();
    private List<DailyAttendanceRecord> todayAttendanceRecords = new();
    
    // Summary counts
    private int presentCount = 0;
    private int lateCount = 0;
    private int timeInOnlyCount = 0;
    private int completeCount = 0;
    
    // Real-time refresh
    private System.Threading.Timer? _refreshTimer;
    private bool _isRefreshing = false;
    private DateTime _lastRefreshTime = DateTime.Now;

    // UI State
    private string selectedStudentId = "";
    private string selectedStudentName = "";
    private string selectedStudentGrade = "";
    private string selectedStudentSection = "";
    private string currentTeacherName = "";
    private string currentTeacherId = "";
    private string currentTeacherSection = "";
    private string currentTeacherSchool = "";
    private DateTime selectedDate = DateTime.Today;
    private string attendanceStatus = "Not Marked";
    private string timeInTime = "";
    private bool isProcessing = false;

    // Messages
    private string successMessage = "";
    private string errorMessage = "";
    
    // Absent modal
    private bool showAbsentModal = false;
    private string selectedAbsentStudentId = "";
    private string selectedAbsentStudentName = "";
    private string absentReason = "";
    private bool isProcessingAbsent = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadCurrentTeacher();
        await LoadStudents();
        await LoadTodayAttendanceRecords();
        
        // Calculate summary counts after loading both students and attendance records
        CalculateSummaryCounts();
        
        // Start real-time refresh timer (every 10 seconds)
        StartRefreshTimer();
    }

    private async Task LoadStudents()
    {
        try
        {
            // Load students filtered by teacher's section and school
            try
            {
                var response = await Http.GetFromJsonAsync<List<Student>>($"{ApiConfig.BaseUrl}/api/register/students?teacherId={currentTeacherId}");
                if (response != null)
                {
                    students = response;
                }
            }
            catch (Exception apiEx)
            {
                Console.WriteLine($"Error loading students: {apiEx.Message}");
                throw;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"DEBUG: Error loading students: {ex.Message}");
            errorMessage = "Error loading students list";
        }
    }

    private async Task LoadTodayAttendanceRecords()
    {
        if (string.IsNullOrEmpty(currentTeacherId)) return;

        try
        {
            var response = await Http.GetFromJsonAsync<List<DailyAttendanceRecord>>($"{ApiConfig.BaseUrl}/api/dailyattendance/today/{currentTeacherId}");
            todayAttendanceRecords = response ?? new List<DailyAttendanceRecord>();
            
            // Calculate summary counts
            CalculateSummaryCounts();
        }
        catch (Exception)
        {
            todayAttendanceRecords = new List<DailyAttendanceRecord>();
        }
    }
    
    private void CalculateSummaryCounts()
    {
        presentCount = 0;
        lateCount = 0;
        timeInOnlyCount = 0;
        completeCount = 0;
        
        foreach (var student in students)
        {
            var attendanceRecord = todayAttendanceRecords.FirstOrDefault(r => r.StudentId == student.StudentId);
            var status = attendanceRecord?.Status ?? "Absent";
            
            if (status == "Present")
            {
                presentCount++;
                if (string.IsNullOrEmpty(attendanceRecord?.TimeOut))
                {
                    timeInOnlyCount++;
                }
                else
                {
                    completeCount++;
                }
            }
            else if (status == "Late")
            {
                lateCount++;
            }
        }
    }
    
    private string GetRowClass(string status)
    {
        return status switch
        {
            "Present" => "table-success",
            "Late" => "table-warning",
            "Absent" => "table-danger",
            _ => ""
        };
    }
    
    private string GetTimeBadgeClass(string status)
    {
        return status switch
        {
            "Present" => "bg-success",
            "Late" => "bg-warning",
            _ => "bg-secondary"
        };
    }
    
    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Present" => "bg-success",
            "Late" => "bg-warning",
            "Absent" => "bg-danger",
            _ => "bg-secondary"
        };
    }
    
    private string GetStatusIcon(string status)
    {
        return status switch
        {
            "Present" => "check",
            "Late" => "exclamation",
            "Absent" => "times",
            _ => "question"
        };
    }

    private async Task LoadCurrentTeacher()
    {
        try
        {
            var currentUser = await AuthService.GetCurrentUserAsync();
            if (currentUser != null && currentUser.UserType == UserType.Teacher)
            {
                currentTeacherName = currentUser.Username;
                
                // Get detailed teacher information including section and school
                var teacherResponse = await Http.GetFromJsonAsync<TeacherInfo>($"{ApiConfig.BaseUrl}/api/register/teacher-by-user/{currentUser.UserId}");
                if (teacherResponse != null)
                {
                    currentTeacherId = teacherResponse.TeacherId;
                    currentTeacherSection = teacherResponse.Section;
                    currentTeacherSchool = teacherResponse.SchoolName;
                    
                    // Reload students with teacher filter after getting teacher info
                    await LoadStudents();
                }
                else
                {
                    errorMessage = "Unable to load teacher details";
                }
            }
            else
            {
                errorMessage = "Please login as a teacher to access this page";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"DEBUG: Error loading teacher: {ex.Message}");
            errorMessage = "Error loading current teacher information";
        }
    }

    private async Task OnStudentChanged()
    {
        if (!string.IsNullOrEmpty(selectedStudentId))
        {
            // Find the selected student's information
            var student = students.FirstOrDefault(s => s.StudentId == selectedStudentId);
            if (student != null)
            {
                selectedStudentName = student.FullName;
                selectedStudentGrade = student.GradeLevel.ToString();
                selectedStudentSection = student.Section;
                
                // Load attendance data for the selected student
                await LoadTodayAttendance();
                await LoadAttendanceHistory();
            }
        }
        else
        {
            // Clear student info
            selectedStudentName = "";
            selectedStudentGrade = "";
            selectedStudentSection = "";
            attendanceStatus = "Not Marked";
            timeInTime = "";
            attendanceHistory.Clear();
        }
    }

    private async Task OnDateChanged()
    {
        await LoadTodayAttendance();
        await LoadAttendanceHistory();
    }

    private async Task LoadTodayAttendance()
    {
        if (string.IsNullOrEmpty(selectedStudentId)) return;

        try
        {
            var response = await Http.GetFromJsonAsync<DailyAttendanceStatus>($"api/attendance/daily-status/{selectedStudentId}?date={selectedDate:yyyy-MM-dd}");
            
            if (response != null)
            {
                attendanceStatus = response.Status;
                timeInTime = response.TimeIn ?? "";
            }
            else
            {
                attendanceStatus = "Not Marked";
                timeInTime = "";
            }
        }
        catch (Exception)
        {
            attendanceStatus = "Not Marked";
            timeInTime = "";
        }
    }

    private async Task LoadAttendanceHistory()
    {
        if (string.IsNullOrEmpty(selectedStudentId)) return;

        try
        {
            var response = await Http.GetFromJsonAsync<List<DailyAttendanceRecord>>($"api/attendance/daily-history/{selectedStudentId}?days=30");
            attendanceHistory = response ?? new List<DailyAttendanceRecord>();
        }
        catch (Exception)
        {
            attendanceHistory = new List<DailyAttendanceRecord>();
        }
    }

    private async Task MarkAttendance()
    {
        if (string.IsNullOrEmpty(selectedStudentId)) return;

        isProcessing = true;
        StateHasChanged();

        try
        {
            var request = new DailyTimeInRequest
            {
                StudentId = selectedStudentId,
                Date = selectedDate,
                TimeIn = DateTime.Now.TimeOfDay
            };

            var response = await Http.PostAsJsonAsync("api/attendance/daily-timein", request);
            
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<DailyTimeInResponse>();
                if (result?.Success == true)
                {
                    successMessage = $"Attendance marked successfully! Status: {result.Status}";
                    errorMessage = "";
                    attendanceStatus = result.Status;
                    timeInTime = result.TimeIn;
                    
                    // Refresh history and today's records
                    await LoadAttendanceHistory();
                    await LoadTodayAttendanceRecords();
                    
                    // Auto-hide success message after 3 seconds
                    _ = Task.Delay(3000).ContinueWith(_ => {
                        successMessage = "";
                        InvokeAsync(StateHasChanged);
                    });
                }
                else
                {
                    errorMessage = result?.Message ?? "Failed to mark attendance";
                    successMessage = "";
                }
            }
            else
            {
                var errorResponse = await response.Content.ReadAsStringAsync();
                try
                {
                    var errorObj = System.Text.Json.JsonSerializer.Deserialize<dynamic>(errorResponse);
                    errorMessage = $"Error: {errorObj?.GetProperty("message")?.GetString() ?? "Failed to mark attendance"}";
                }
                catch
                {
                    errorMessage = "Error marking attendance. Please try again.";
                }
                successMessage = "";
            }
        }
        catch (Exception)
        {
            errorMessage = "Error marking attendance";
            successMessage = "";
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }
    
    private void StartRefreshTimer()
    {
        // Create a timer that calls RefreshData every 10 seconds
        _refreshTimer = new System.Threading.Timer(async _ => await RefreshData(), null, TimeSpan.Zero, TimeSpan.FromSeconds(10));
    }
    
    private async Task RefreshData()
    {
        if (_isRefreshing) return;
        
        _isRefreshing = true;
        try
        {
            // Auto-absent functionality temporarily disabled
            // var now = DateTime.Now;
            // if (now.Hour == 18 && now.Minute == 0) // 6:00 PM exactly
            // {
            //     await AutoMarkAbsentStudents();
            // }
            
            // Store previous count to detect new records
            var previousCount = todayAttendanceRecords.Count;
            
            await LoadTodayAttendanceRecords();
            _lastRefreshTime = DateTime.Now;
            
            // Check if new records were added
            var newCount = todayAttendanceRecords.Count;
            if (newCount > previousCount)
            {
                var newRecords = newCount - previousCount;
                successMessage = $"ðŸ”„ {newRecords} new attendance record(s) detected!";
                
                // Auto-hide notification after 5 seconds
                _ = Task.Delay(5000).ContinueWith(_ => {
                    successMessage = string.Empty;
                    InvokeAsync(StateHasChanged);
                });
            }
            
            // Trigger UI update
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error refreshing data: {ex.Message}");
        }
        finally
        {
            _isRefreshing = false;
        }
    }
    
    private void ShowAbsentModal(string studentId, string studentName)
    {
        selectedAbsentStudentId = studentId;
        selectedAbsentStudentName = studentName;
        absentReason = "";
        showAbsentModal = true;
    }
    
    private void CloseAbsentModal()
    {
        showAbsentModal = false;
        selectedAbsentStudentId = "";
        selectedAbsentStudentName = "";
        absentReason = "";
    }
    
    private async Task MarkStudentAbsent()
    {
        if (string.IsNullOrEmpty(selectedAbsentStudentId) || string.IsNullOrEmpty(absentReason))
        {
            errorMessage = "Please provide a reason for absence";
            return;
        }
        
        isProcessingAbsent = true;
        StateHasChanged();
        
        try
        {
            var request = new
            {
                StudentId = selectedAbsentStudentId,
                Date = DateTime.Today,
                Status = "Absent",
                Remarks = absentReason
            };
            
            var response = await Http.PostAsJsonAsync($"{ApiConfig.BaseUrl}/api/dailyattendance/mark-absent", request);
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = $"Student {selectedAbsentStudentName} marked as absent successfully!";
                errorMessage = "";
                
                // Refresh attendance records
                await LoadTodayAttendanceRecords();
                CalculateSummaryCounts();
                
                // Close modal
                CloseAbsentModal();
                
                // Auto-hide success message
                _ = Task.Delay(3000).ContinueWith(_ => {
                    successMessage = "";
                    InvokeAsync(StateHasChanged);
                });
            }
            else
            {
                var errorResponse = await response.Content.ReadAsStringAsync();
                errorMessage = $"Error marking student as absent: {errorResponse}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error marking student as absent: {ex.Message}";
        }
        finally
        {
            isProcessingAbsent = false;
            StateHasChanged();
        }
    }
    
    private async Task CancelAbsent(string studentId, string studentName)
    {
        isProcessingAbsent = true;
        StateHasChanged();
        
        try
        {
            var response = await Http.PostAsJsonAsync($"{ApiConfig.BaseUrl}/api/dailyattendance/cancel-absent", new { StudentId = studentId, Date = DateTime.Today });
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = $"Absent status cancelled for {studentName}!";
                errorMessage = "";
                
                // Refresh attendance records
                await LoadTodayAttendanceRecords();
                CalculateSummaryCounts();
                
                // Debug: Check the status after refresh
                var studentRecord = todayAttendanceRecords.FirstOrDefault(r => r.StudentId == studentId);
                Console.WriteLine($"DEBUG: After cancel - StudentId: {studentId}, Status: {studentRecord?.Status ?? "No record"}");
                
                // Force UI update
                await InvokeAsync(StateHasChanged);
                
                // Auto-hide success message
                _ = Task.Delay(3000).ContinueWith(_ => {
                    successMessage = "";
                    InvokeAsync(StateHasChanged);
                });
            }
            else
            {
                var errorResponse = await response.Content.ReadAsStringAsync();
                errorMessage = $"Error cancelling absent status: {errorResponse}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error cancelling absent status: {ex.Message}";
        }
        finally
        {
            isProcessingAbsent = false;
            StateHasChanged();
        }
    }
    
    public void Dispose()
    {
        _refreshTimer?.Dispose();
    }
}

