@page "/sms-hub"
@using NewscannerMAUI.Services
@using Microsoft.Maui.Devices
@inject SmsHubService SmsHubService
@inject NavigationManager Navigation
@implements IDisposable

<div class="hub-container">
    <div class="sidebar">
        <div class="logo-area">
            <i class="fas fa-satellite-dish"></i>
            <span>ATTRAK SMS HUB</span>
        </div>
        
        <div class="stats-card">
            <div class="stat-item">
                <span class="label">Pending Queue</span>
                <span class="value">@PendingCount</span>
            </div>
            <div class="stat-item">
                <span class="label">Total Sent</span>
                <span class="value">@TotalSentCount</span>
            </div>
        </div>

        <nav class="nav-menu">
            <button class="nav-item active"><i class="fas fa-chart-line"></i> Dashboard</button>
            <button class="nav-item" @onclick='() => Navigation.NavigateTo("/qr-scanner")'><i class="fas fa-qrcode"></i> Open Scanner</button>
            <button class="nav-item" @onclick='() => Navigation.NavigateTo("/")'><i class="fas fa-sign-in-alt"></i> Back to Home</button>
        </nav>

        <div class="status-footer">
            <div class="status-dot @(IsRunning ? "online" : "offline")"></div>
            <span>@(IsRunning ? "SERVICE ACTIVE" : "SERVICE STOPPED")</span>
        </div>
    </div>

    <div class="main-content">
        <header class="top-bar">
            <h1>Office PC Dispatcher</h1>
            <div class="top-bar-right">
                <div class="device-info">
                    <i class="fas fa-desktop"></i>
                    <span>@DeviceInfo.Current.Name (@Platform)</span>
                </div>
                <button class="server-refresh-btn" @onclick="RefreshServer" disabled="@_isRefreshingServer">
                    @(_isRefreshingServer ? "Refreshing..." : "Refresh Server")
                </button>
            </div>
        </header>
        
        <div class="diagnostic-meta">
            <div><strong>API:</strong> @SmsHubService.ApiBaseUrl</div>
            <div><strong>Last poll:</strong> @(SmsHubService.LastPollAtLocal?.ToString("HH:mm:ss") ?? "Never")</div>
            <div><strong>pending-sms:</strong> @SmsHubService.LastPendingFetchStatus</div>
            <div><strong>SignalR:</strong> @SmsHubService.RealtimeStatus</div>
            <div><strong>Last signal:</strong> @(SmsHubService.LastRealtimeSignalAtLocal?.ToString("HH:mm:ss") ?? "Never")</div>
        </div>

        <div class="dashboard-grid">
            <div class="card terminal-card">
                <div class="card-header">
                    <i class="fas fa-terminal"></i>
                    <span>Real-time Activity Logs</span>
                    <button class="clear-btn" @onclick="ClearLogs">Clear</button>
                </div>
                <div class="terminal-body" id="log-container">
                    @foreach (var log in Logs)
                    {
                        <div class="log-entry @log.Type.ToLower()">
                            <span class="time">[@log.Timestamp.ToString("HH:mm:ss")]</span>
                            <span class="msg">@log.Message</span>
                        </div>
                    }
                </div>
            </div>

            <div class="card connection-card">
                <div class="card-header">
                    <i class="fas fa-microchip"></i>
                    <span>Hardware Status</span>
                </div>
                <div class="hardware-info">
                    <div class="hw-item">
                        <span class="hw-label">GSM Modem</span>
                        <span class="hw-value">@(ModemPort ?? "Seeking...")</span>
                        <button class="refresh-btn" @onclick="RefreshModem" disabled="@_isRefreshingModem">
                            @(_isRefreshingModem ? "Scanning..." : "Refresh Port")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hub-container {
        display: flex;
        height: 100vh;
        background: #0f172a;
        color: #f8fafc;
        font-family: 'Inter', sans-serif;
    }

    /* Sidebar */
    .sidebar {
        width: 280px;
        background: #1e293b;
        border-right: 1px solid #334155;
        display: flex;
        flex-direction: column;
        padding: 24px;
    }

    .logo-area {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 20px;
        font-weight: 800;
        color: #38bdf8;
        margin-bottom: 40px;
    }

    .stats-card {
        background: #0f172a;
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 32px;
    }

    .stat-item {
        display: flex;
        flex-direction: column;
        margin-bottom: 12px;
    }

    .stat-item:last-child { margin-bottom: 0; }

    .stat-item .label { font-size: 12px; color: #94a3b8; }
    .stat-item .value { font-size: 24px; font-weight: 700; color: #f1f5f9; }

    .nav-menu { flex: 1; }
    .nav-item {
        width: 100%;
        background: transparent;
        border: none;
        color: #94a3b8;
        padding: 12px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 12px;
        cursor: pointer;
        transition: all 0.2s;
        margin-bottom: 8px;
        text-align: left;
    }

    .nav-item:hover, .nav-item.active {
        background: #334155;
        color: #fff;
    }

    .status-footer {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 11px;
        font-weight: 700;
        color: #94a3b8;
    }

    .status-dot { width: 8px; height: 8px; border-radius: 50%; }
    .status-dot.online { background: #22c55e; box-shadow: 0 0 10px #22c55e; }
    .status-dot.offline { background: #ef4444; }

    /* Main Content */
    .main-content {
        flex: 1;
        padding: 40px;
        display: flex;
        flex-direction: column;
        gap: 24px;
        overflow-y: auto;
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .top-bar h1 {
        font-size: 24px;
        font-weight: 800;
        margin: 0;
        color: #e5e7eb;
    }

    .top-bar-right {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .diagnostic-meta {
        font-size: 14px;
        color: #ffffff;
        margin-top: -2px;
        display: flex;
        flex-wrap: wrap;
        gap: 4px 24px;
        max-width: 100%;
    }

    .diagnostic-meta div {
        line-height: 1.5;
        overflow-wrap: anywhere;
    }

    .device-info {
        background: #1e293b;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 13px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .server-refresh-btn {
        background: #22c55e;
        border: none;
        color: #022c22;
        font-size: 12px;
        padding: 8px 14px;
        border-radius: 999px;
        cursor: pointer;
        font-weight: 600;
        box-shadow: 0 0 0 1px #15803d;
        transition: background 0.2s, transform 0.1s, box-shadow 0.2s, opacity 0.2s;
    }

    .server-refresh-btn:hover:not(:disabled) {
        background: #16a34a;
        transform: translateY(-1px);
        box-shadow: 0 0 0 1px #16a34a, 0 8px 16px rgba(16, 185, 129, 0.25);
    }

    .server-refresh-btn:disabled {
        opacity: 0.7;
        cursor: default;
        box-shadow: 0 0 0 1px #166534;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 24px;
        flex: 1;
    }

    .card {
        background: #1e293b;
        border-radius: 16px;
        border: 1px solid #334155;
        display: flex;
        flex-direction: column;
    }

    .card-header {
        padding: 16px 20px;
        border-bottom: 1px solid #334155;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 700;
        font-size: 15px;
        color: #f9fafb;
    }

    .card-header .clear-btn {
        margin-left: auto;
        background: transparent;
        border: 1px solid #475569;
        color: #94a3b8;
        font-size: 11px;
        padding: 4px 8px;
        border-radius: 4px;
        cursor: pointer;
    }

    /* Terminal */
    .terminal-body {
        flex: 1;
        background: #000;
        margin: 12px;
        border-radius: 8px;
        padding: 16px;
        font-family: 'Consolas', monospace;
        font-size: 14px;
        overflow-y: auto;
        display: flex;
        flex-direction: column-reverse;
    }

    .log-entry {
        margin-bottom: 4px;
    }

    .log-entry .time {
        color: #cbd5e1;
        margin-right: 8px;
    }

    .log-entry .msg {
        white-space: pre-wrap;
        overflow-wrap: anywhere;
    }

    .log-entry.info .msg { color: #60a5fa; }
    .log-entry.success .msg { color: #60a5fa; }
    .log-entry.warn .msg { color: #facc15; }
    .log-entry.error .msg { color: #f97373; }

    .hw-item {
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .hw-label { color: #e5e7eb; }
    .hw-value { color: #60a5fa; font-weight: 700; margin-right: 12px; }

    .refresh-btn {
        background: #0f172a;
        border: 1px solid #38bdf8;
        color: #e0f2fe;
        font-size: 12px;
        padding: 6px 10px;
        border-radius: 999px;
        cursor: pointer;
        transition: background 0.2s, color 0.2s, border-color 0.2s, transform 0.1s;
    }

    .refresh-btn:hover:not(:disabled) {
        background: #38bdf8;
        color: #0f172a;
        border-color: #38bdf8;
        transform: translateY(-1px);
    }

    .refresh-btn:disabled {
        opacity: 0.6;
        cursor: default;
    }
</style>

@code {
    private int PendingCount => SmsHubService.PendingCount;
    private int TotalSentCount => SmsHubService.TotalSentCount;
    private bool IsRunning => SmsHubService.IsRunning;
    private string? ModemPort => SmsHubService.ModemPort;
    private string Platform = DeviceInfo.Current.Platform.ToString();
    private List<SmsHubService.HubLogEntry> Logs => SmsHubService.Logs;
    private bool _isRefreshingModem;
    private bool _isRefreshingServer;

    protected override void OnInitialized()
    {
        SmsHubService.OnStatusChanged += HandleStatusChanged;
        
        // Initial log if empty
        if (!SmsHubService.Logs.Any())
        {
             // The service already logs startup, so this might not be needed
        }
    }

    private void HandleStatusChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void ClearLogs() => SmsHubService.Logs.Clear();

    private async Task RefreshModem()
    {
        if (_isRefreshingModem) return;

        _isRefreshingModem = true;
        try
        {
            await SmsHubService.RefreshModemAsync();
        }
        finally
        {
            _isRefreshingModem = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task RefreshServer()
    {
        if (_isRefreshingServer) return;

        _isRefreshingServer = true;
        try
        {
            await SmsHubService.ManualRefreshAsync();
        }
        finally
        {
            _isRefreshingServer = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    public void Dispose()
    {
        SmsHubService.OnStatusChanged -= HandleStatusChanged;
    }
}
