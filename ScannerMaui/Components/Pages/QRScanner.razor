                                                {
                                                    <span class="badge @(attendance.Remarks switch {
                                                        "Whole Day" => "bg-success",
                                                        "Half Day" => "bg-warning",
                                                        _ => "bg-info"
                                                    })">@attendance.Remarks</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

