        if (isOnline && offlineRecordCount > 0)
        {
            System.Diagnostics.Debug.WriteLine("Connection restored with pending offline records, attempting auto-sync...");
            try
            {
                await TriggerAutoSyncSilent();
            }
            catch (Exception ex)
            {
